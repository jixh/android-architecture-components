<resources>

    <!-- Base application theme. -->
    <style name="AppToolbar">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="DefaultSmartStyle">
        <item name="loading_layout">@layout/default_loading_layout</item>
        <item name="none_content">@layout/default_none_layout</item>
        <item name="network_content">@layout/default_connectionless_layout</item>
        <item name="failed_content">@layout/default_failed_layout</item>
    </style>

    <style name="message_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="hint_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">13sp</item>
    </style>
</resources>
